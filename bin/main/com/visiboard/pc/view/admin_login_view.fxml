<StackPane stylesheets="@admin_theme.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.visiboard.pc.controller.AdminLoginController">
   <children>
      <VBox alignment="CENTER" spacing="25.0" styleClass="login-card" maxWidth="400" maxHeight="500">
         <children>
            <Label text="ðŸ”" textFill="#8e24aa">
               <font>
                  <Font size="50.0" />
               </font>
            </Label>
            
            <VBox alignment="CENTER" spacing="5.0">
               <Label styleClass="title-label" text="Admin Portal" />
               <Label styleClass="subtitle-label" text="Secure Access" />
            </VBox>

            <VBox spacing="15.0">

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToWidth="true" xmlns:fx="http://javafx.com/fxml" fx:controller="com.visiboard.pc.controller.ProfileController" stylesheets="@style.css" style="-fx-background-color: transparent;">
    <VBox spacing="0" style="-fx-background-color: #fcfcfc;">
        
        <!-- Header Section -->
        <HBox spacing="30" alignment="CENTER_LEFT" styleClass="profile-header">
            <ImageView fx:id="profileImageView" fitWidth="120" fitHeight="120" preserveRatio="true">
                <clip>
                    <Circle radius="60" centerX="60" centerY="60"/>
                </clip>
                <image>
                    <Image url="@../images/profile_pic.png"/>
                </image>
            </ImageView>
            
            <VBox alignment="CENTER_LEFT" spacing="5">
                <Label fx:id="nameLabel" text="Loading..." styleClass="profile-name"/>
                <Label fx:id="emailLabel" text="Loading..." styleClass="profile-handle"/>
                <Label text="Digital Artist | Traveler | Coffee Lover" wrapText="true" style="-fx-text-fill: #34495e; -fx-padding: 10 0 0 0;"/>
            </VBox>
            
            <HBox spacing="40" style="-fx-padding: 0 0 0 50;" HBox.hgrow="ALWAYS" alignment="CENTER_RIGHT">
                <VBox alignment="CENTER">
                    <Label fx:id="postsLabel" text="0" styleClass="stat-value"/>
                    <Label text="Posts" styleClass="stat-label"/>
                </VBox>
                <VBox alignment="CENTER">
                    <Label fx:id="followersLabel" text="0" styleClass="stat-value"/>
                    <Label text="Followers" styleClass="stat-label"/>
                </VBox>
                <VBox alignment="CENTER">
                    <Label fx:id="followingLabel" text="0" styleClass="stat-value"/>
                    <Label text="Following" styleClass="stat-label"/>
                </VBox>
            </HBox>
        </HBox>

        <VBox style="-fx-padding: 0 30 30 30;">
            <Label text="Recent Posts" styleClass="section-title"/>

            <GridPane hgap="20" vgap="20" alignment="CENTER">
                <!-- Post 1 -->
                <StackPane GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <ImageView fitWidth="300" fitHeight="300" preserveRatio="false" styleClass="post-image">
                        <image><Image url="@../images/post_1.png"/></image>
                        <clip><Rectangle width="300" height="300" arcWidth="20" arcHeight="20"/></clip>
                    </ImageView>
                    <VBox alignment="BOTTOM_CENTER" pickOnBounds="false">
                        <VBox styleClass="caption-container" alignment="CENTER" maxWidth="300">
                            <Label text="Sunset Vibes" styleClass="caption-text"/>
                        </VBox>
                    </VBox>
                </StackPane>

                <!-- Post 2 -->
                <StackPane GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <ImageView fitWidth="300" fitHeight="300" preserveRatio="false" styleClass="post-image">
                        <image><Image url="@../images/post_2.png"/></image>
                        <clip><Rectangle width="300" height="300" arcWidth="20" arcHeight="20"/></clip>
                    </ImageView>
                    <VBox alignment="BOTTOM_CENTER" pickOnBounds="false">
                        <VBox styleClass="caption-container" alignment="CENTER" maxWidth="300">
                            <Label text="Coffee Time" styleClass="caption-text"/>
                        </VBox>
                    </VBox>
                </StackPane>

                <!-- Post 3 -->
                <StackPane GridPane.columnIndex="2" GridPane.rowIndex="0">
                    <ImageView fitWidth="300" fitHeight="300" preserveRatio="false" styleClass="post-image">
                        <image><Image url="@../images/post_3.png"/></image>
                        <clip><Rectangle width="300" height="300" arcWidth="20" arcHeight="20"/></clip>
                    </ImageView>
                    <VBox alignment="BOTTOM_CENTER" pickOnBounds="false">
                        <VBox styleClass="caption-container" alignment="CENTER" maxWidth="300">
                            <Label text="City Lights" styleClass="caption-text"/>
                        </VBox>
                    </VBox>
                </StackPane>
                
                <!-- Post 4 -->
                <StackPane GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <ImageView fitWidth="300" fitHeight="300" preserveRatio="false" styleClass="post-image">
                        <image><Image url="@../images/post_4.png"/></image>
                        <clip><Rectangle width="300" height="300" arcWidth="20" arcHeight="20"/></clip>
                    </ImageView>
                    <VBox alignment="BOTTOM_CENTER" pickOnBounds="false">
                        <VBox styleClass="caption-container" alignment="CENTER" maxWidth="300">
                            <Label text="Gourmet Burger" styleClass="caption-text"/>
                        </VBox>
                    </VBox>
                </StackPane>

                <!-- Post 5 -->
                <StackPane GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <ImageView fitWidth="300" fitHeight="300" preserveRatio="false" styleClass="post-image">
                        <image><Image url="@../images/post_5.png"/></image>
                        <clip><Rectangle width="300" height="300" arcWidth="20" arcHeight="20"/></clip>
                    </ImageView>
                    <VBox alignment="BOTTOM_CENTER" pickOnBounds="false">
                        <VBox styleClass="caption-container" alignment="CENTER" maxWidth="300">
                            <Label text="Beach Day" styleClass="caption-text"/>
                        </VBox>
                    </VBox>
                </StackPane>

                <!-- Post 6 -->
                <StackPane GridPane.columnIndex="2" GridPane.rowIndex="1">
                    <ImageView fitWidth="300" fitHeight="300" preserveRatio="false" styleClass="post-image">
                        <image><Image url="@../images/post_6.png"/></image>
                        <clip><Rectangle width="300" height="300" arcWidth="20" arcHeight="20"/></clip>
                    </ImageView>
                    <VBox alignment="BOTTOM_CENTER" pickOnBounds="false">
                        <VBox styleClass="caption-container" alignment="CENTER" maxWidth="300">
                            <Label text="Street Music" styleClass="caption-text"/>
                        </VBox>
                    </VBox>
                </StackPane>
            </GridPane>
        </VBox>
    </VBox>
</ScrollPane>

               </padding>
            </Button>
         </children>
      </HBox>
   </top>
   
   <!-- Sidebar Navigation -->
   <left>
      <VBox prefHeight="740.0" prefWidth="250.0" spacing="5.0" style="-fx-background-color: #1a1a2e; -fx-border-color: #2c2c54; -fx-border-width: 0 1 0 0;">

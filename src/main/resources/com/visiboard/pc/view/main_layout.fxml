            <Button fx:id="socialButton" mnemonicParsing="false" onAction="#showSocialView" prefHeight="45.0" prefWidth="250.0" style="-fx-background-color: transparent; -fx-text-fill: #b0b0b0; -fx-alignment: BASELINE_LEFT; -fx-cursor: hand;" text="ðŸ‘¥  Social" styleClass="nav-button">

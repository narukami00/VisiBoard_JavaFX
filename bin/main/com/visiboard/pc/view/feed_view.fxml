<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.visiboard.pc.controller.FeedController" style="-fx-background-color: #16213e;">
    <center>
        <TabPane fx:id="tabPane" style="-fx-background-color: transparent; -fx-border-width: 0;" tabClosingPolicy="UNAVAILABLE">
            <!-- Discover Tab -->
            <Tab text="Discover" closable="false" style="-fx-background-color: transparent;">
                <BorderPane style="-fx-background-color: #16213e;">
                    <top>
                        <VBox style="-fx-background-color: #1a1a2e; -fx-padding: 15;">
                            <Label text="Discover Notes" textFill="white">
                                <font>
                                    <Font name="System Bold" size="20.0"/>
                                </font>
                            </Label>
                            <Label text="Explore location-based notes from around the world" textFill="#b0b0b0" style="-fx-padding: 5 0 0 0;">
                                <font>
                                    <Font size="12.0"/>
                                </font>
                            </Label>
                        </VBox>
                    </top>
                    <center>
                        <ScrollPane fx:id="discoverScrollPane" fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;">
                            <FlowPane fx:id="discoverFlowPane" hgap="15" vgap="15" alignment="TOP_CENTER" style="-fx-background-color: transparent; -fx-padding: 20;"/>
                        </ScrollPane>
                    </center>
                </BorderPane>
            </Tab>

            <!-- Notifications Tab -->
            <Tab fx:id="notificationsTab" text="Notifications" closable="false" style="-fx-background-color: transparent;">
                <BorderPane style="-fx-background-color: #16213e;">
                    <top>
                        <VBox style="-fx-background-color: #1a1a2e; -fx-padding: 15;">
                            <Label text="Notifications" textFill="white">
                                <font>
                                    <Font name="System Bold" size="20.0"/>
                                </font>
                            </Label>
                            <Label text="Stay updated with likes, comments, and follows" textFill="#b0b0b0" style="-fx-padding: 5 0 0 0;">
                                <font>
                                    <Font size="12.0"/>
                                </font>
                            </Label>
                        </VBox>
                    </top>
                    <center>
                        <ScrollPane fx:id="notificationsScrollPane" fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;">
                            <VBox fx:id="notificationsVBox" spacing="10" style="-fx-background-color: transparent; -fx-padding: 20;"/>
                        </ScrollPane>
                    </center>
                </BorderPane>
            </Tab>
        </TabPane>
    </center>
</BorderPane>


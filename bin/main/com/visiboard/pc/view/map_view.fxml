<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.web.WebView?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.Button?>

<AnchorPane prefHeight="800.0" prefWidth="950.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.visiboard.pc.controller.MapController">
   <children>
      <WebView fx:id="mapWebView" prefHeight="800.0" prefWidth="950.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
   </children>
    <ToggleButton fx:id="themeToggle" text="Dark Mode" AnchorPane.topAnchor="20.0" AnchorPane.rightAnchor="20.0" onAction="#toggleTheme" stylesheets="@admin_theme.css" styleClass="action-button"/>
    
    <ToggleButton fx:id="satelliteToggle" text="Satellite" AnchorPane.topAnchor="70.0" AnchorPane.rightAnchor="20.0" onAction="#toggleSatellite" stylesheets="@admin_theme.css" styleClass="action-button"/>

    <Button text="Refresh" AnchorPane.topAnchor="120.0" AnchorPane.rightAnchor="20.0" onAction="#refreshMap" stylesheets="@admin_theme.css" styleClass="action-button" style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 0);"/>
</AnchorPane>

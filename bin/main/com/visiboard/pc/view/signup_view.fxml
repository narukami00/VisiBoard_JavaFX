<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: linear-gradient(to bottom right, #1a1a2e, #16213e);" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.visiboard.pc.controller.SignupController">
   <children>
      <VBox alignment="CENTER" layoutX="250.0" layoutY="80.0" prefHeight="440.0" prefWidth="300.0" spacing="18.0" style="-fx-background-color: rgba(255, 255, 255, 0.1); -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 0);">
         <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
         </padding>
         <children>
            <Label text="VisiBoard" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="36.0" />
               </font>
            </Label>
            <Label text="Create Account" textFill="#b0b0b0">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="nameField" promptText="Full Name" style="-fx-background-color: rgba(255, 255, 255, 0.1); -fx-text-fill: white; -fx-prompt-text-fill: #808080; -fx-background-radius: 5;">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <TextField fx:id="emailField" promptText="Email" style="-fx-background-color: rgba(255, 255, 255, 0.1); -fx-text-fill: white; -fx-prompt-text-fill: #808080; -fx-background-radius: 5;">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <PasswordField fx:id="passwordField" promptText="Password (min 6 characters)" style="-fx-background-color: rgba(255, 255, 255, 0.1); -fx-text-fill: white; -fx-prompt-text-fill: #808080; -fx-background-radius: 5;">
               <font>
                  <Font size="14.0" />
               </font>
            </PasswordField>
            <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" style="-fx-background-color: rgba(255, 255, 255, 0.1); -fx-text-fill: white; -fx-prompt-text-fill: #808080; -fx-background-radius: 5;">
               <font>
                  <Font size="14.0" />
               </font>
            </PasswordField>
            <Label fx:id="errorLabel" textFill="#ff6b6b" wrapText="true">
               <font>
                  <Font size="12.0" />
               </font>
            </Label>
            <Button fx:id="signupButton" maxWidth="Infinity" prefHeight="40.0" style="-fx-background-color: #0f3460; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-weight: bold;" text="Sign Up">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <HBox alignment="CENTER" spacing="5.0">
               <children>
                  <Label text="Already have an account?" textFill="#b0b0b0">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Label>
                  <Hyperlink fx:id="goToLoginLink" text="Login" textFill="#4a9eff" underline="true">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Hyperlink>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>

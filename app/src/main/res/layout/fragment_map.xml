<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false">

    <org.maplibre.android.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Navigation Overlay (Top Center) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_navigation_overlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/card_background"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_navigation"
                app:tint="@color/primary"
                android:layout_marginStart="8dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp">

                <TextView
                    android:id="@+id/tv_nav_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calculating..."
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_bold"/>

                <TextView
                    android:id="@+id/tv_nav_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_medium"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/btn_stop_nav"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_stop_circle"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Legend Widget (Top Left) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_legend_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_margin="16dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/card_background"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:minWidth="140dp">

            <ProgressBar
                android:id="@+id/pb_legend_loading"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:indeterminateTint="@color/accent"/>

            <LinearLayout
                android:id="@+id/ll_legend_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="invisible"> <!-- Hidden until loaded -->

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_legend_avatar"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_profile"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#FFD700"/>

                    <ImageView
                        android:id="@+id/iv_crown"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignTop="@id/iv_legend_avatar"
                        android:layout_alignEnd="@id/iv_legend_avatar"
                        android:layout_marginTop="-6dp"
                        android:layout_marginEnd="0dp"
                        android:elevation="4dp"
                        android:src="@drawable/ic_crown" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TOP LEGEND"
                        android:textColor="@color/accent"
                        android:textSize="10sp"
                        android:fontFamily="@font/poppins_bold"
                        android:letterSpacing="0.05"/>

                    <TextView
                        android:id="@+id/tv_legend_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_bold"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:maxWidth="100dp"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- FAB Menu Group -->
    <LinearLayout
        android:id="@+id/fab_menu_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="100dp"
        android:paddingBottom="8dp"
        android:clipChildren="false"
        android:clipToPadding="false">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fab_refresh"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="12dp"
            android:text="Refresh"
            android:textSize="12sp"
            android:textColor="@color/text_primary"
            android:fontFamily="@font/poppins_medium"
            android:textAllCaps="false"
            app:icon="@drawable/ic_refresh"
            app:iconTint="@color/text_primary"
            app:iconSize="18dp"
            app:backgroundTint="@color/card_background"
            app:cornerRadius="20dp"
            app:elevation="6dp"
            android:stateListAnimator="@null"
            android:visibility="invisible"
            tools:visibility="visible"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fab_heatmap"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="12dp"
            android:text="Heatmap"
            android:textSize="12sp"
            android:textColor="@color/text_primary"
            android:fontFamily="@font/poppins_medium"
            android:textAllCaps="false"
            app:icon="@drawable/ic_heatmap"
            app:iconTint="@color/text_primary"
            app:iconSize="18dp"
            app:backgroundTint="@color/card_background"
            app:cornerRadius="20dp"
            app:elevation="6dp"
            android:stateListAnimator="@null"
            android:visibility="invisible"
            tools:visibility="visible"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fab_friends"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="12dp"
            android:text="Friends Radar"
            android:textSize="12sp"
            android:textColor="@color/text_primary"
            android:fontFamily="@font/poppins_medium"
            android:textAllCaps="false"
            app:icon="@drawable/ic_friends"
            app:iconTint="@color/text_primary"
            app:iconSize="18dp"
            app:backgroundTint="@color/card_background"
            app:cornerRadius="20dp"
            app:elevation="6dp"
            android:stateListAnimator="@null"
            android:visibility="invisible"
            tools:visibility="visible"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fab_recenter"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="12dp"
            android:text="Recenter"
            android:textSize="12sp"
            android:textColor="@color/text_primary"
            android:fontFamily="@font/poppins_medium"
            android:textAllCaps="false"
            app:icon="@drawable/ic_my_location"
            app:iconTint="@color/text_primary"
            app:iconSize="18dp"
            app:backgroundTint="@color/card_background"
            app:cornerRadius="20dp"
            app:elevation="6dp"
            android:stateListAnimator="@null"
            android:visibility="invisible"
            tools:visibility="visible"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="normal"
            app:srcCompat="@drawable/ic_menu"
            app:backgroundTint="@color/card_background"
            app:tint="@color/text_primary"
            app:elevation="0dp"
            app:borderWidth="0dp"
            android:stateListAnimator="@null"
            android:contentDescription="Menu"/>

    </LinearLayout>

    <!-- Modern Add Note Button -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btnAddNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:clickable="true"
        android:focusable="true"
        android:text="Add Note"
        android:textColor="@android:color/white"
        android:fontFamily="@font/poppins_semibold"
        app:icon="@drawable/ic_add"
        app:iconTint="@android:color/white"
        app:backgroundTint="@color/primary"
        app:elevation="8dp"
        app:pressedTranslationZ="12dp"
        app:rippleColor="@color/primaryDark" />

</FrameLayout>

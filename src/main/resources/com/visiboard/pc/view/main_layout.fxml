            <Button fx:id="profileButton" mnemonicParsing="false" onAction="#showProfileView" prefHeight="45.0" prefWidth="250.0" style="-fx-background-color: transparent; -fx-text-fill: #b0b0b0; -fx-alignment: BASELINE_LEFT; -fx-cursor: hand;" text="ðŸ‘¤  Profile" styleClass="nav-button">
               <font>
                  <Font size="14.0" />
               </font>
               <padding>
                  <Insets left="30.0" />
               </padding>
            </Button>
         </children>
      </VBox>
   </left>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainBorderPane" prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.visiboard.pc.controller.MainController">
   <left>
      <VBox alignment="TOP_CENTER" prefHeight="800.0" prefWidth="250.0" spacing="20.0" style="-fx-background-color: #1a1a2e;">
         <children>
            <Label text="VisiBoard" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </Label>
            <Button mnemonicParsing="false" onAction="#showMapView" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: BASELINE_LEFT; -fx-cursor: hand;" text="3D Map">
               <font>
                  <Font size="16.0" />
               </font>
               <padding>
                  <Insets left="40.0" />
               </padding>
            </Button>
            <Button mnemonicParsing="false" onAction="#showAnalyticsView" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: BASELINE_LEFT; -fx-cursor: hand;" text="Analytics">
               <font>
                  <Font size="16.0" />
               </font>
               <padding>
                  <Insets left="40.0" />
               </padding>
            </Button>
            <Button mnemonicParsing="false" onAction="#showSocialView" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: BASELINE_LEFT; -fx-cursor: hand;" text="Social Feed">
               <font>
                  <Font size="16.0" />
               </font>
               <padding>
                  <Insets left="40.0" />
               </padding>
            </Button>
            <Button mnemonicParsing="false" onAction="#showAdminView" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: BASELINE_LEFT; -fx-cursor: hand;" text="Admin">
               <font>
                  <Font size="16.0" />
               </font>
               <padding>
                  <Insets left="40.0" />
               </padding>
            </Button>
         </children>
         <padding>
            <Insets top="30.0" />
         </padding>
      </VBox>
   </left>
</BorderPane>
